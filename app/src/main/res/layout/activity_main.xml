<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/myrelativelayout"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundstyle">




    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar"
        android:elevation="4dp"
        android:title="@string/app_name"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <!-- android:theme="@style/ThemeOverlay.AppCompat.ActionBar" -->

    <ImageButton
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:text="Options"
        android:layout_column="6"
        android:id="@+id/optionsbtn2"
        android:layout_below="@+id/toolbar_actionbar"
        android:background="@drawable/buttonplayer1"
        android:src="@drawable/ic_menu_white_24dp" />

    <ImageButton
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:text="Play Again"
        android:layout_column="8"
        android:id="@+id/playagain2"
        android:layout_below="@+id/toolbar_actionbar"
        android:layout_alignRight="@+id/toolbar_actionbar"
        android:background="@drawable/buttonplayer1"
        android:src="@drawable/ic_replay_white_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/optionsbtn2"
        android:id="@+id/r11"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:textAlignment="center"
            android:measureWithLargestChild="false"
            android:gravity="center"
            android:id="@+id/ll2">

            <ImageButton
                android:id="@+id/button8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"

                android:layout_column="6"

                android:layout_gravity="top"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/grey" />
            <!--
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button8"
                android:layout_column="6" />
            -->
            <ImageButton

                android:id="@+id/button9"
                android:layout_column="8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />

            <ImageButton
                android:id="@+id/button2"
                android:layout_column="10"

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"



                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ll3"
            android:layout_below="@+id/ll2">

            <ImageButton

                android:id="@+id/button7"
                android:layout_column="6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:padding="2px" />

            <ImageButton

                android:id="@+id/button1"
                android:layout_column="8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:padding="2px" />

            <ImageButton

                android:id="@+id/button3"
                android:layout_column="10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ll4"
            android:layout_below="@+id/ll3">

            <ImageButton

                android:id="@+id/button6"
                android:layout_column="6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:clickable="false"
                android:contentDescription="6" />

            <ImageButton

                android:id="@+id/button5"
                android:layout_column="8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:contentDescription="5" />

            <ImageButton

                android:id="@+id/button4"
                android:layout_column="10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey"
                android:shadowColor="#FF008080"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r11"
        android:id="@+id/r21"
        android:gravity="center"
        android:layout_alignParentTop="false">



        <TextView android:id="@+id/toasttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:hyphenationFrequency="full"
            android:layout_margin="20dip"
            android:gravity="center|top"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/llb15"
            android:layout_gravity="bottom"
            android:layout_below="@+id/toasttext"
            android:baselineAligned="false"
            android:measureWithLargestChild="false">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Options"
                android:layout_column="6"
                android:id="@+id/optionsbtn"
                android:gravity="center|top"
                android:layout_gravity="top"
                android:textAlignment="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Play Again"
                android:layout_column="8"
                android:id="@+id/playagain"
                android:layout_alignParentRight="true"
                android:gravity="center|top"
                android:layout_gravity="top"
                android:textAlignment="center" />

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_button_min_height_material"
        android:clickable="false"
        android:id="@+id/ll5"
        android:gravity="center|bottom"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toolbar">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:id="@+id/ll14"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="false"
            android:foregroundGravity="center_vertical|fill_vertical"
            android:gravity="center">
            <!-- </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:id="@+id/ll15"
            android:layout_weight="1"
