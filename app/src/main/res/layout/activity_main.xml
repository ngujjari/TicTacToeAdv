            android:textAlignment="center"
            android:layout_gravity="bottom">-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player1Image"
                android:background="@drawable/ic_action_ic_clear_white_48dp" />

            <TextView
                android:id="@+id/player1Lbl"
                android:text="Player1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/playerColon1"
                android:text=" : "
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/player1score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="3"
                android:gravity="center_vertical|end" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:id="@+id/ll15"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@+id/ll14"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:gravity="center">
            <TextView
                android:id="@+id/player2Lbl"
                android:text="Player2"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" />
            <TextView
                android:id="@+id/playerColon2"
                android:text=" : "
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
            <TextView
                android:id="@+id/player2score"
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player2Image"
                android:background="@drawable/ic_action_ic_fiber_manual_record_white_48dp" />
        </LinearLayout>
    </LinearLayout>
