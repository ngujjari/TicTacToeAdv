<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <solid
                android:color="#FFF6546A" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />

            <corners
                android:radius="30dp"
                 />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#FFF6546A"
                android:endColor="#992f2f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="30dp"/>
            <padding
                android:left="5dp"
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>

